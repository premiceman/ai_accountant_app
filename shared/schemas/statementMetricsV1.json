{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["period", "inflowsMinor", "outflowsMinor", "netMinor"],
  "properties": {
    "period": {
      "type": "object",
      "required": ["start", "end", "month"],
      "additionalProperties": false,
      "properties": {
        "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" }
      }
    },
    "account": {
      "anyOf": [
        { "type": "null" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": ["string", "null"], "maxLength": 256 },
            "iban": { "type": ["string", "null"], "maxLength": 64 },
            "sortCode": { "type": ["string", "null"], "maxLength": 32 },
            "accountNumber": { "type": ["string", "null"], "maxLength": 64 }
          }
        }
      ]
    },
    "openingBalanceMinor": { "type": ["integer", "null"] },
    "closingBalanceMinor": { "type": ["integer", "null"] },
    "inflowsMinor": { "type": "integer" },
    "outflowsMinor": { "type": "integer" },
    "netMinor": { "type": "integer" },
    "transactionsV1": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "description", "amountMinor"],
        "additionalProperties": false,
        "properties": {
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "description": { "type": "string" },
          "amountMinor": { "type": "integer" },
          "balanceMinor": { "type": ["integer", "null"] }
        }
      }
    }
  }
}
