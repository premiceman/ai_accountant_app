{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["payDate", "period", "grossMinor", "netMinor", "taxMinor", "nationalInsuranceMinor", "pensionMinor", "studentLoanMinor"],
  "properties": {
    "payDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "period": {
      "type": "object",
      "required": ["start", "end", "month"],
      "additionalProperties": false,
      "properties": {
        "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "end": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" }
      }
    },
    "employer": {
      "anyOf": [
        { "type": "null" },
        { "type": "string", "maxLength": 256 },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string", "maxLength": 256 }
          }
        }
      ]
    },
    "grossMinor": { "type": "integer" },
    "netMinor": { "type": "integer" },
    "taxMinor": { "type": "integer" },
    "nationalInsuranceMinor": { "type": "integer" },
    "pensionMinor": { "type": "integer" },
    "studentLoanMinor": { "type": "integer" },
    "taxCode": { "type": ["string", "null"], "maxLength": 32 }
  }
}
